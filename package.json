{
  "author": "BLAZE",
  "build": {
    "appId": "com.enemetronics.chatchitchat",
    "files": [
      "build/*",
      "package.json"
    ],
    "productName": "ChitChat",
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "concurrently": "^9.0.1",
    "express": "^4.21.0",
    "minimist": "^1.2.8",
    "socket.io": "^4.8.0",
    "tape": "^5.9.0",
    "ws": "^8.18.0"
  },
  "description": "A application to chat with friends",
  "devDependencies": {
    "electron": "^27.0.2"
  },
  "icon": "favicon.png",
  "license": "CC0-1.0",
  "main": "./build/main.js",
  "name": "ChitChat",
  "scripts": {
    "dev": "vite --mode development ./",
    "electron": "electron ./build/main.js --hostUrl https://enemetronics.com.ng/ --wsPort 8000",
    "server": "node ./build/server.js --wsPort 8000",
    "start": "concurrently \"npm run electron\" \"npm run server\""
  },
  "version": "1.0.2"
}
